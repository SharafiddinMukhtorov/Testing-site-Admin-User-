@{
    ViewData["Title"] = "Yangi savol yaratish";
}

<style>
    body { 
        background-color: #1e1e2f; 
        color: #fff; 
        font-family: 'Segoe UI', sans-serif; 
        margin: 0; 
        padding: 20px; 
    }
    .container { 
        max-width: 600px; 
        margin: 0 auto; 
        padding: 20px; 
        background-color: #2c2c3e; 
        border-radius: 15px; 
    }
    input, textarea { 
        width: 100%; 
        padding: 12px; 
        margin-bottom: 15px; 
        border-radius: 8px; 
        border: none; 
        background-color: #3a3a50; 
        color: #fff; 
    }
    button { 
        padding: 10px 20px; 
        border-radius: 8px; 
        border: none; 
        background-color: #6a11cb; 
        color: #fff; 
        cursor: pointer; 
    }
</style>

<div class="container">
    <h2>Yangi savol yaratish</h2>
    @if (ViewBag.Error != null)
    {
        <div style="color:#ff6b6b">@ViewBag.Error</div>
    }
    <form asp-action="Create" method="post">
        <input type="text" name="questionText" placeholder="Savol Matni" required />
        <input type="text" name="options[0]" placeholder="1-javob" required />
        <input type="text" name="options[1]" placeholder="2-javob" required />
        <input type="text" name="options[2]" placeholder="3-javob" />
        <input type="number" name="correctIndex" placeholder="(1 - 3) bo'lgan to'g'ri javobni tanlang" required />
        <button type="submit">Yaratish</button>
    </form>
</div>
