@model List<Test.Domain.Entities.Question>
@{
    ViewData["Title"] = "Admin Panel";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #1e1e2f;
        color: #fff;
        margin: 0;
        padding: 20px;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        flex-wrap: wrap;
    }

    h2 {
        margin: 0;
    }

    .btn {
        padding: 8px 15px;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-block;
        min-width: 80px;
        text-align: center;
    }

    .btn-create {
        background: linear-gradient(90deg, #6a11cb, #8e2de2);
        color: #fff;
    }

        .btn-create:hover {
            background: linear-gradient(90deg, #8e2de2, #a64de0);
        }

    .btn-edit {
        background: linear-gradient(90deg, #1f7a8c, #3aa0b6);
        color: #fff;
    }

        .btn-edit:hover {
            background: linear-gradient(90deg, #3aa0b6, #5ac4d1);
        }

    .btn-delete {
        background: linear-gradient(90deg, #d64545, #ff6b6b);
        color: #fff;
    }

        .btn-delete:hover {
            background: linear-gradient(90deg, #ff6b6b, #ff8b8b);
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #2c2c3e;
        border-radius: 10px;
        overflow: hidden;
    }

    th, td {
        padding: 12px;
        border-bottom: 1px solid #444;
        text-align: left;
    }

    th {
        background-color: #3a3a50;
    }

    td div {
        margin-bottom: 5px;
    }

    td .btn-group {
        display: flex;
        gap: 10px;
    }
</style>

<div class="header">
    <h2>Admin Paneli - Savollar</h2>
    <a asp-action="Create" class="btn btn-create">Yangi Savol Yaratish</a>
</div>

<table>
    <thead>
        <tr>
            <th>Savollar</th>
            <th>Javoblar</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var q in Model)
        {
            <tr>
                <td>@q.QuestionText</td>
                <td>
                    @foreach (var o in q.Options)
                    {
                        <div>@o.Text @(o.IsCorrect ? "(Correct)" : "")</div>
                    }
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@q.Id" class="btn btn-edit">Tahrirlash</a>
                        <a asp-action="Delete" asp-route-id="@q.Id" class="btn btn-delete">O'chirish</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
