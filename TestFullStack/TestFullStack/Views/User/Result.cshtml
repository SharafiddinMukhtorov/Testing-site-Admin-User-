@model Dictionary<Test.Domain.Entities.Question, Test.Domain.Entities.Option>
@{
    ViewData["Title"] = "Test Natijasi";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #1e1e2f;
        color: #fff;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #2c2c3e;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0,0,0,0.5);
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .score-box {
        text-align: center;
        font-size: 22px;
        margin-bottom: 25px;
        padding: 15px;
        background-color: rgba(255,255,255,0.1);
        border-radius: 12px;
    }

    .question-box {
        background-color: rgba(255,255,255,0.05);
        padding: 15px;
        border-radius: 12px;
        margin-bottom: 15px;
    }

    .options-container {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .option {
        padding: 10px;
        border-radius: 8px;
        background-color: rgba(255,255,255,0.05);
    }

    .correct {
        background-color: rgba(72, 187, 120, 0.5);
    }

    .wrong {
        background-color: rgba(220, 53, 69, 0.5);
    }

    .btn-back {
        display: block;
        margin: 20px auto 0 auto;
        padding: 12px 25px;
        border-radius: 10px;
        border: none;
        background: linear-gradient(90deg, #6a11cb, #8e2de2);
        color: #fff;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s;
        text-align: center;
        text-decoration: none;
    }

        .btn-back:hover {
            background: linear-gradient(90deg, #8e2de2, #a64de0);
        }
</style>

<div class="container">
    <h2>Test Natijasi</h2>

    <div class="score-box">
        Siz @ViewBag.Total ta savoldan @ViewBag.Score ta to‘g‘ri javob berdingiz
    </div>

    @foreach (var kv in Model)
    {
        var question = kv.Key;
        var selectedOption = kv.Value;

        <div class="question-box">
            <p><strong>@question.QuestionText</strong></p>
            <div class="options-container">
                @foreach (var option in question.Options)
                {
                    var cls = "";
                    if (option.IsCorrect) cls = "correct";
                    else if (option.Id == selectedOption?.Id && !option.IsCorrect) cls = "wrong";

                    <div class="option @cls">
                        @option.Text @(option.IsCorrect ? "(To‘g‘ri javob)" : "")
                        @if (option.Id == selectedOption?.Id && !option.IsCorrect)
                        {
                            <span>(Siz tanladingiz)</span>
                        }
                    </div>
                }
            </div>
        </div>
    }

    <a asp-action="Index" class="btn-back">Testga qaytish</a>
</div>
